APP_NAME=TeremFlow
ENVIRONMENT=development

# Local dev:
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/teremflow

# Comma-separated or JSON list. For dev, Vite default:
CORS_ORIGINS=["http://localhost:5173"]

# Auth
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=10080
JWT_COOKIE_NAME=teremflow_session

# Render Cron -> /tasks/daily
TASKS_DAILY_SECRET=change-me

# Alerts thresholds
DEDUCTIBLE_NEAR_PCT=0.10
DEDUCTIBLE_NEAR_ABS_ILS=20000

# Email (optional; if not set, alerts are printed to logs)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
ALERT_EMAIL_RECIPIENTS=[]

# Optional public URL for links
PUBLIC_APP_URL=


